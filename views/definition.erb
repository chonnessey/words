<h2>Definition: <%= @definition.definition %></h2>
<h3>Word: <%= @definition.word.word %></h3>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="defi">Update definition</label>
  <input id="defi" name="defi" type="text">

  <button class="btn btn-primary" type="submit">Update</button>
</form>

<form action="/words/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <label for="definition">Delete definition</label>
  <input name="_method" type="hidden" value="delete">

  <button class="btn btn-warning" type="submit">Delete</button>
</form>

<a href="/words/<%= @definition.word.id %>">Back to <%= @definition.word.word %></a>