
<h1>Update <%= @word.word() %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word">Update word</label>
  <input id="word" name="word" type="text">

  <button class="btn btn-primary" type="submit">Update</button>
</form>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button class="btn btn-warning" type="submit">Delete word</button>
</form>

<p><a href="/words">Return to word list</a></p>